%header.mdl-layout__header.mdl-layout__header--scroll
  .mdl-layout__header-row
    %span.mdl-layout-title= link_to "SocialCo", root_path, class: 'white-text no-margin no-decoration'
    .mdl-layout-spacer
    %nav.mdl-navigation
      -if user_signed_in?
        =link_to 'Mis amigos', friendships_path(), class: 'white-text right-space'
        =link_to 'cerrar sesion', destroy_user_session_path, method: :delete, class: "white-text"
.mdl-layout__drawer
  %span.mdl-layout-title SocialCo
  %nav.mdl-navigation
    =link_to "Inicio", root_path, class: 'mdl-navigation__link'
    =link_to "Mi perfil", current_user, class: 'mdl-navigation__link'
    =link_to "Mis amigos", friendships_path, class: 'mdl-navigation__link'